<Window x:Class="RevitAPIChangeWallType.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitAPIChangeWallType"
             mc:Ignorable="d" 
             Height="150" Width="300" Title="Изменение типа стен">
    <StackPanel>
        <Label Content="Выбор типа стен" Margin="5"/>
        <ComboBox ItemsSource="{Binding WallTypes}" SelectedValue="{Binding SelectedWallType}"
                  DisplayMemberPath="Name" 
                  Margin="5"/>
        <Button Content="Изменить тип" Command="{Binding SaveCommand}" Margin="5"/>
    </StackPanel>
</Window>
